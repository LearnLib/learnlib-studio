        }
    }
}

/* Edges */
edgeStyle simpleArrow (1) {    
    appearance default
    
    decorator {
        location (0.3)
        text {
            appearance default
            value "%s"
        }
    }
    
    decorator {
        location (1.0) // at the end of the edge
        ARROW
        appearance default 
    }
}

edgeStyle queryEdge (1) { 
    appearance extends default {
        foreground (144, 144, 144)
        
        lineStyle DASHDOT
    }
    
    decorator {
        location (0.5)
        text {
            appearance default
            value "%s"
        }
    }
    
    decorator {
        location (0.0) // at the beginning of the edge
        ARROW
        appearance default 
    }
    
    decorator {
        location (1.0) // at the end of the edge
        TRIANGLE
        appearance default
    }
}
