/* Generic Appearances */
appearance default {
    lineWidth 2
    background (245, 245, 245)
}

appearance labelFont {
    font ("Sans",10)
}

appearance labelFontItalics {
    font ("Sans", ITALIC, 10)
}


/* Nodes */
/* Start */
nodeStyle start {
    roundedRectangle {
        appearance {
            background (245, 245, 245)
        }
        size (100, 65)
        corner (10, 10)
        text {
            appearance labelFontItalics
            position ( CENTER, TOP 4 )  
            value "start"
        }
        image {
            position (CENTER, TOP 24)
            size (fix 32, fix 32)   
            path ("icons/common/startSIB.png")
        }
    }
}

/* Generic Complex Nodes */
nodeStyle complexNode (1) {
    roundedRectangle {
        size (200, 120)
        corner (10, 10)
        
        text {
            appearance labelFont
            position ( CENTER, TOP 4 )
            value "%s"
        }
    }
}

/* Generic Labeled Node */
nodeStyle labeledNode (1) {
